<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Instalabra
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<link rel="stylesheet" href="{{ asset('css/app.css') }}"> {% block stylesheets %}{% endblock %}{% block javascripts %}{% endblock %}
		</head>
		<body>
			<header>
				<h1>
					<a href="{{ path('app_home') }}" style="text-decoration:none; color:inherit;">Instalabra</a>
				</h1>
				<nav>
					<ul>
						<li>
							<a href="{{ path('app_home') }}">Inicio</a>
						</li>
						{% if app.user %}
							<li>
								<a href="{{ path('app_ranking') }}">Ranking</a>
							</li>
							<li>
								<a href="{{ path('app_perfil') }}">Mi Perfil</a>
							</li>
							<li>
								<a href="{{ path('app_logout') }}">Cerrar sesi√≥n</a>
							</li>
						{% else %}
							<li>
								<a href="{{ path('app_login') }}">Login</a>
							</li>
							<li>
								<a href="{{ path('app_register') }}">Registro</a>
							</li>
							<li>
								<a href="{{ path('app_ranking') }}">Ranking</a>
							</li>
						{% endif %}
					</ul>
				</nav>
			</header>

			<main>
				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="flash-{{ label }}">
							{{ message }}
						</div>
					{% endfor %}
				{% endfor %}

				{% block body %}{% endblock %}
			</main>

			{% if app.session.get('debug_mode') %}
				<div style="position: fixed; bottom: 20px; right: 20px; background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(10px); border: 1px solid #ccc; padding: 15px; z-index: 9999; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); font-family: sans-serif; min-width: 250px;">
					<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px;">
						<h4 style="margin: 0; color: #d32f2f; font-size: 14px; text-transform: uppercase; font-weight: bold;">üîß Debug Mode</h4>
						<span style="font-size: 10px; background: #ffebee; color: #c62828; padding: 2px 6px; border-radius: 4px;">ACTIVO</span>
					</div>

					<p style="margin: 0 0 10px 0; font-size: 13px; color: #555;">
						<strong>Fecha Simulada:</strong><br>
						{{ app.session.get('simulated_date') ? app.session.get('simulated_date') : 'Tiempo Real (Hoy)' }}
					</p>

					<form action="{{ path('debug_set_date') }}" method="post" style="margin-bottom: 8px;">
						<input type="datetime-local" name="simulated_date" value="{{ app.session.get('simulated_date') }}" step="1" style="width: 100%; padding: 6px; border: 1px solid #ddd; border-radius: 6px; font-size: 12px; margin-bottom: 5px;">
						<button type="submit" style="width: 100%; padding: 6px; background: #333; color: white; border: none; border-radius: 6px; cursor: pointer; font-size: 12px;">Establecer Fecha</button>
					</form>

					<div style="display: flex; gap: 5px;">
						<form action="{{ path('debug_set_date') }}" method="post" style="flex: 1;">
							<input type="hidden" name="simulated_date" value="">
							<button type="submit" style="width: 100%; padding: 6px; background: #90a4ae; color: white; border: none; border-radius: 6px; cursor: pointer; font-size: 12px;">Reset Hoy</button>
						</form>
						<a href="{{ path('debug_toggle') }}" style="flex: 1; text-align: center; padding: 6px; background: #d32f2f; color: white; border: none; border-radius: 6px; cursor: pointer; font-size: 12px; text-decoration: none; display: inline-block; box-sizing: border-box;">Desactivar</a>
					</div>
				</div>
			{% endif %}

			<footer>
				<p>&copy; 2025 Instalabra</p>
				<p style="font-size: 0.8em; margin-top: 5px;">
					{% if not app.session.get('debug_mode') %}
						<a href="{{ path('debug_toggle') }}" style="color: #666; text-decoration: none; border: 1px solid #ccc; padding: 3px 8px; border-radius: 4px; background: #f9f9f9;">üõ†Ô∏è Activar Debug</a>
					{% endif %}
				</p>
			</footer>
		</body>
	</html>
