{% extends 'base.html.twig' %}
{% block title %}Mi Perfil - Instalabra
{% endblock %}
{% block body %}
<div class="search-buttons">
    <a href="{{ path('app_search', {'q': query, 'filter': 'usuarios'}) }}">
        <button class="{{ currentFilter is not defined or currentFilter == 'usuarios' ? 'active' : '' }}">Usuarios</button>
    </a>
    <a href="{{ path('app_search', {'q': query, 'filter': 'palabras'}) }}">
        <button class="{{ currentFilter == 'palabras' ? 'active' : '' }}">Palabras</button>
    </a>
    <a href="{{ path('app_search', {'q': query, 'filter': 'definiciones'}) }}">
        <button class="{{ currentFilter == 'definiciones' ? 'active' : '' }}">Definiciones</button>
    </a>
</div>

{% if currentFilter is not defined or currentFilter == 'usuarios' %}
    <h3>Usuarios</h3>
    <ul>
        {% for user in usuarios %}
            <li>{{ user.nombre }}</li>
        {% else %}
            <li>No se encontraron usuarios</li>
        {% endfor %}
    </ul>
{% endif %}

{% if currentFilter == 'palabras' %}
    <h3>Palabras</h3>
    <ul>
        {% for palabra in palabras %}
            <li>{{ palabra.palabra }}</li>
        {% else %}
            <li>No se encontraron palabras</li>
        {% endfor %}
    </ul>
{% endif %}

{% if currentFilter == 'definiciones' %}
    <h3>Definiciones</h3>
    <ul>
        {% for palabra in palabras %}
            <li>{{ palabra.definicion }}</li>
        {% else %}
            <li>No se encontraron definiciones</li>
        {% endfor %}
    </ul>
{% endif %}


{% endblock %}
