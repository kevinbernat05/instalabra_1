<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Instalabra</title>
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
</head>
<body>
    <header>
        <h1>Bienvenido a Instalabra</h1>
        <nav>
            <ul>
                <li><a href="{{ path('app_home') }}">Inicio</a></li>
                <li><a href="{{ path('app_login') }}">Login</a></li>
                <li><a href="{{ path('app_register') }}">Registro</a></li>
                <li><a href="{{ path('app_perfil') }}">Perfil</a></li>
                <li><a href="{{ path('app_ranking') }}">Ranking</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <h2>Publica tu palabra</h2>

        {% if app.user %}
            {{ form_start(form) }}
                {{ form_row(form.texto, {'attr': {'placeholder': 'Escribe tu palabra...', 'rows': 3}}) }}
                <button type="submit">Publicar</button>
            {{ form_end(form) }}
        {% else %}
            <p>Debes <a href="{{ path('app_login') }}">iniciar sesi√≥n</a> para publicar.</p>
        {% endif %}

            <h2>Feed de palabras</h2>
                {% for palabra in palabras %}
                    <div class="palabra">
                        <p><strong>{{ palabra.usuario.nombre }}</strong></p>
                        <p>
                            <a href="{{ path('palabra_show', { id: palabra.id }) }}" class="palabra-link">
                                {{ palabra.texto }}
                            </a>
                        </p>
                        <small>{{ palabra.fechaCreacion|date('d/m/Y H:i') }}</small>

                        <p>üëç Likes: {{ palabra.valoraciones|filter(v => v.likeActiva)|length }}</p>

                        {% if app.user %}
                            {# Bot√≥n de Like #}
                            <form action="{{ path('palabra_like_toggle', {'id': palabra.id}) }}" method="post">
                                {% set liked = palabra.valoraciones|filter(v => v.usuario.id == app.user.id and v.likeActiva)|length %}
                                <button type="submit">
                                    {% if liked %}üíñ Ya te gusta{% else %}üëç Like{% endif %}
                                </button>
                            </form>

                            {# Bot√≥n de Comentarios (toggle) #}
                            <button type="button" onclick="document.getElementById('comentarios-{{ palabra.id }}').classList.toggle('hidden')">
                                üí¨ Comentarios ({{ palabra.comentarios|length }})
                            </button>

                            <div id="comentarios-{{ palabra.id }}" class="hidden">
                                {# Formulario para nuevo comentario #}
                                <form action="{{ path('palabra_comentar', {'id': palabra.id}) }}" method="post">
                                    <input type="text" name="comentario_texto" placeholder="Escribe tu comentario..." required>
                                    <button type="submit">Comentar</button>
                                </form>

                                {# Lista de comentarios existentes #}
                                {% for comentario in palabra.comentarios %}
                                    <div class="comentario">
                                        <p><strong>{{ comentario.usuario.nombre }}</strong>: {{ comentario.texto }}</p>
                                        <small>{{ comentario.fechaCreacion|date('d/m/Y H:i') }}</small>
                                    </div>
                                {% else %}
                                    <p>No hay comentarios todav√≠a.</p>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% else %}
                    <p>No hay palabras publicadas todav√≠a.</p>
                {% endfor %}

    </main>
    <footer>
        <p>&copy; 2025 Instalabra</p>
    </footer>
</body>
</html>
