{% extends 'base_aut.html.twig' %}
{% block title %}Crear cuenta
{% endblock %}

{% block body %}
	<div class="login-box register-box">
		<h2>Únete a Instalabra</h2>
		<p class="subtitle">Crea tu cuenta en segundos</p>

		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
		<div class="form-group">
			{{ form_label(form.nombre, 'Nombre completo') }}
			{{ form_widget(form.nombre, {'attr': {'class': 'input', 'autofocus': true}}) }}
			{{ form_errors(form.nombre) }}
		</div>

		<div class="form-group">
			{{ form_label(form.email, 'Email') }}
			{{ form_widget(form.email, {'attr': {'class': 'input'}}) }}
			{{ form_errors(form.email) }}
		</div>

		<div class="form-group">
			{{ form_label(form.password.first, 'Contraseña') }}
			{{ form_widget(form.password.first, {'attr': {'class': 'input'}}) }}
			{{ form_errors(form.password.first) }}
		</div>

		<div class="form-group">
			{{ form_label(form.password.second, 'Confirmar Contraseña') }}
			{{ form_widget(form.password.second, {'attr': {'class': 'input'}}) }}
			{{ form_errors(form.password.second) }}
		</div>

		<button type="submit" class="btn-primary">Crear cuenta</button>
		{{ form_end(form) }}

		<div class="divider">
			<span>o</span>
		</div>

		<p class="signup-link">
			¿Ya tienes cuenta?
			<a href="{{ path('app_login') }}">Inicia sesión</a>
		</p>
	</div>
{% endblock %}
