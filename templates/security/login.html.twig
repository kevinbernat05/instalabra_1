{% extends 'base_aut.html.twig' %}

{% block title %}Iniciar sesión
{% endblock %}

{% block body %}
	<div class="login-container">
		<div class="login-box">
			<h2>Bienvenido de nuevo</h2>
			<p class="subtitle">Inicia sesión para continuar</p>

			{% if error %}
				<div class="alert alert-danger">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			<form action="{{ path('app_login') }}" method="post">
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" id="email" name="_username" value="{{ last_username }}" required autofocus>
				</div>

				<div class="form-group">
					<label for="password">Contraseña</label>
					<div class="password-wrapper">
						<input type="password" id="password" name="_password" value="" autocomplete="current-password" required>
						<button type="button" class="toggle-password" aria-label="Mostrar contraseña">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="eye-open">
								<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
								<circle cx="12" cy="12" r="3"></circle>
							</svg>
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="eye-closed" style="display: none;">
								<path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
								<line x1="1" y1="1" x2="23" y2="23"></line>
							</svg>
						</button>
					</div>
					<div style="text-align: right; margin-top: 5px;">
						<a href="{{ path('app_forgot_password_request') }}" style="font-size: 13px; color: #6b7280; text-decoration: none;">¿Olvidaste tu contraseña?</a>
					</div>
				</div>

				<button type="submit" class="btn-primary">Entrar</button>
			</form>

			<div class="divider">
				<span>o</span>
			</div>

			<p class="signup-link">
				¿No tienes cuenta?
				<a href="{{ path('app_register') }}">Regístrate gratis</a>
			</p>
		</div>
	</div>
{% endblock %}
